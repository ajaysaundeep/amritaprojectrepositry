<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form</title>

    <!-- Font Icon -->
    <!-- <link  href="register_page/css/material-design-iconic-font.min.css" rel="stylesheet"> -->

    <!-- Main css -->
    <link  href="/register_page/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="main">
      <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" action="/register_user" class="register-form" id="register-form">
                          <div class="form-group">  
                              <br>
                            <select name="usertype" id="usertype" style="width:200px;">
                                <option value="student">Student</option>
                                <option value="mentor">Mentor</option>
                            </select>   
                            
                           </div> 
                        <!-- <div class="form-group">
                            <input type="radio" id="student" name="studentchoice">
                            <label for="student"><b><font size="+1">Student</font></b></label>
                        </div>
                        <div class="form-group">   
                            <input type="radio" id="mentor" name="mentorchoice">
                            <label for="mentor"><b><font size="+1">Mentor</font></b></label>
                        </div> -->
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="name" placeholder="Your Name"/>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email"/>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="pass" id="pass" placeholder="Password"  onchange='check_pass()'/>
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password"  onchange='check_pass()'/>
                            </div>
                            <div class="form-group" style='color:red'>
                              <i>User has  already registered with this email</i>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="/register_page/images/signup-image.jpg" ></figure>
                        <a href="/login_page/loginpage.html" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>

        
    </div>
    
</body>
<script src="/register_page/js/js_for_registerpage.js"></script>
</html>